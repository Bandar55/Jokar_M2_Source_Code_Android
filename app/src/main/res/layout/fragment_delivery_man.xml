<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DeliveryManFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_15"
        android:orientation="vertical">

        <com.mobu.jokar.view.RobotoLightItalicTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/upload_ID_txt"
            android:textColor="@color/purpalMedium"
            android:textSize="@dimen/text_size_medium" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/canvas_filter_bg"
            android:orientation="vertical">


            <com.mobu.jokar.view.RobotoRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_3"
                android:background="@color/grey"
                android:drawableEnd="@drawable/upload"
                android:drawablePadding="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:text="ID-1"
                android:textColor="@color/blacklight"
                android:textSize="@dimen/text_size_medium" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:visibility="visible">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/license" />


            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/canvas_filter_bg"
            android:orientation="vertical">


            <com.mobu.jokar.view.RobotoRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_3"
                android:background="@color/grey"
                android:drawableEnd="@drawable/upload"
                android:drawablePadding="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:text="ID-2"
                android:textColor="@color/blacklight"
                android:textSize="@dimen/text_size_medium" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:visibility="visible">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/license" />


            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


            <ImageView
                android:id="@+id/iv_prf"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_100"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@drawable/profile_z" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_prf"
                android:layout_alignEnd="@+id/iv_prf"
                android:layout_marginBottom="@dimen/dp_10"
                android:src="@drawable/verify" />


        </RelativeLayout>


        <com.mobu.jokar.view.RobotoRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_prf"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center"
            android:text="@string/upload_verified_icon"
            android:textColor="@color/blacklight"
            android:textSize="@dimen/text_size_regular" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.mobu.jokar.view.RobotoRegularTextView
                android:id="@+id/tv_myid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Id"
                android:textColor="@color/purpalMedium"
                android:textSize="@dimen/text_size_regular" />

            <com.mobu.jokar.view.RobotoRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_toRightOf="@+id/tv_myid"
                android:text="#2589631"
                android:textColor="@color/purpalMedium"
                android:textSize="@dimen/text_size_regular" />


        </RelativeLayout>


        <com.mobu.jokar.view.RobotoRegularEditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_edit_txt_desc"
            android:hint="Write something about"
            android:textColorHint="@color/blacklight"
            android:textColor="@color/blacklight"
            android:paddingBottom="@dimen/dp_50"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_30"
            android:paddingTop="@dimen/dp_10"
            android:textSize="@dimen/text_size_regular" />

        <com.mobu.jokar.view.RobotoRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Vehicle Type"
            android:textColor="@color/purpalMedium"
            android:textSize="@dimen/text_size_regular" />


        <com.mobu.jokar.view.RobotoRegularEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:hint="Bike"
            android:textColorHint="@color/blacklight"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/dp_5"
            android:padding="@dimen/dp_15"
            android:paddingStart="@dimen/dp_20"
            android:textSize="@dimen/text_size_regular" />

        <com.mobu.jokar.view.RobotoRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Vehicle Number"
            android:textColor="@color/purpalMedium"
            android:textSize="@dimen/text_size_regular" />


        <com.mobu.jokar.view.RobotoRegularEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:layout_marginTop="@dimen/dp_5"
            android:hint="ABC-123-456"
            android:textColorHint="@color/blacklight"
            android:textColor="@color/blacklight"
            android:padding="@dimen/dp_15"
            android:paddingStart="@dimen/dp_20"
            android:textSize="@dimen/text_size_regular" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/canvas_filter_bg"
            android:orientation="vertical">


            <com.mobu.jokar.view.RobotoRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_3"
                android:background="@color/grey"
                android:drawableEnd="@drawable/upload"
                android:drawablePadding="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:textColor="@color/blacklight"
                android:text="Upload Vehicle License"

                android:textSize="@dimen/text_size_medium" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:visibility="visible">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/license" />


            </RelativeLayout>

        </LinearLayout>


        <com.mobu.jokar.view.RobotoRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Insurance Number"
            android:textColor="@color/purpalMedium"
            android:textSize="@dimen/text_size_regular" />


        <com.mobu.jokar.view.RobotoRegularEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:hint="DEC-1A-4456"
            android:textColorHint="@color/blacklight"
            android:textColor="@color/blacklight"
            android:layout_marginTop="@dimen/dp_5"
            android:padding="@dimen/dp_15"
            android:paddingStart="@dimen/dp_20"
            android:textSize="@dimen/text_size_regular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/canvas_filter_bg"
            android:orientation="vertical">


            <com.mobu.jokar.view.RobotoRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_3"
                android:background="@color/grey"
                android:drawableEnd="@drawable/upload"
                android:drawablePadding="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:text="Upload Insurance"
                android:textColor="@color/blacklight"
                android:textSize="@dimen/text_size_medium" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:visibility="visible">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/license" />


            </RelativeLayout>

        </LinearLayout>

        <com.mobu.jokar.view.RobotoRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Bank A/C IBAN (optional)"
            android:textColor="@color/purpalMedium"
            android:textSize="@dimen/text_size_regular" />


        <com.mobu.jokar.view.RobotoRegularEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:hint="DEC-1A-4456"
            android:textColorHint="@color/blacklight"
            android:textColor="@color/blacklight"
            android:layout_marginTop="@dimen/dp_5"
            android:padding="@dimen/dp_15"
            android:paddingStart="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_25"
            android:textSize="@dimen/text_size_regular" />

        <com.mobu.jokar.view.RobotoRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Emergency Phone"
            android:textColor="@color/purpalMedium"
            android:textSize="@dimen/text_size_regular" />


        <com.mobu.jokar.view.RobotoRegularEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:hint="+00096 23652"
            android:textColorHint="@color/blacklight"
            android:textColor="@color/blacklight"
            android:layout_marginTop="@dimen/dp_5"
            android:padding="@dimen/dp_15"
            android:paddingStart="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_25"
            android:textSize="@dimen/text_size_regular" />


    </LinearLayout>


</ScrollView>